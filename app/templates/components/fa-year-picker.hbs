{{#unless flatMode}}
  <div class='buttons'>
    <button class='decrease-btn' {{action 'decreaseYear'}}>{{decreaseButtonText}}</button>
    <button class='picker-toggle-btn' {{action 'toggleIsExpanded'}}>
      {{#if year}}
        {{year}}
      {{else}}
        {{yearPlaceholderText}}
      {{/if}}
      <i class='caret'></i>
    </button>
    <button class='increase-btn' {{action 'increaseYear'}}>{{increaseButtonText}}</button>
  </div>
{{/unless}}

{{#if pickerVisible}}
  <div class='picker'>
    <div class='page-controls'>
      <button class='previous-page-btn' {{action 'previousPage'}}>{{previousPageButtonText}}</button>
      <button class='next-page-btn' {{action 'nextPage'}}>{{nextPageButtonText}}</button>
    </div>

    <ul class='year-list'>
      {{#each year in yearsOnPage}}
        <li {{bind-attr class="year.isActive:active"}} {{action 'pickedYear' year.year}}>{{year.year}}</li>
      {{/each}}
    </ul>
  </div>
{{/if}}
