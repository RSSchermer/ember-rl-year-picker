{{#unless flatMode}}
  <div class='buttons'>
    <button class='decrease-btn' {{action 'decreaseYear'}} {{bind-attr disabled="decreaseYearButtonDisabled"}}>
      {{{decreaseButtonText}}}
    </button>

    <button class='picker-toggle-btn rl-dropdown-toggle' {{action 'toggleDropdown'}}>
      {{#if year}}
        {{year}}
      {{else}}
        {{{yearPlaceholderText}}}
      {{/if}}
      <i class='caret'></i>
    </button>

    <button class='increase-btn' {{action 'increaseYear'}} {{bind-attr disabled="increaseYearButtonDisabled"}}>
      {{{increaseButtonText}}}
    </button>
  </div>
{{/unless}}

{{#if pickerVisible}}
  <div class='picker rl-dropdown'>
    <div class='page-controls'>
      <button class='previous-page-btn' {{action 'previousPage'}} {{bind-attr disabled="previousPageButtonDisabled"}}>
        {{{previousPageButtonText}}}
      </button>

      <button class='next-page-btn' {{action 'nextPage'}} {{bind-attr disabled="nextPageButtonDisabled"}}>
        {{{nextPageButtonText}}}
      </button>
    </div>

    <ul class='year-list'>
      {{#each year in yearsOnPage}}
        <li {{bind-attr class="year.isActive:active year.outOfRange:out-of-range"}} {{action 'pickedYear' year.year}}>
          {{year.year}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}
